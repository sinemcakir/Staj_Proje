
@using Staj2.Controllers
@using EntityFrameworkLibrary
@model PageItem
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler</h2>


<br />
<br />
<br />
<br />

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-sm btn-success pull-right" data-mode="KategoriGuncelle" data-data1="">+&nbsp;Yeni</a>
    </div>

    <div class="col-md-12">

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Kategori Kod</th>
                    <th>Üst KategoriID</th>
                    <th>Kategori Başlık</th>
                    <th>Kategori Açıklama</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.lstKategorilerIslem)
                {
                    <tr>
                        <td>@item.kategoriID</td>
                        <td>@item.UstKategoriID</td>
                        <td>@item.kategoriBaslik</td>
                        <td>@item.kategoriAciklama</td>
                        <td><a class="btn btn-sm btn-info" data-mode="KategoriGuncelle" data-data1="@item.kategoriID">Güncelle</a></td>
                        <td><a class="btn btn-sm btn-danger" data-mode="KategoriSil" data-data1="@item.kategoriID">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>