<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Assets/plugins/autocomplate/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Assets/plugins/autocomplate/autocomplate.css" rel="stylesheet" />
    <link href="~/Assets/plugins/datatable/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Assets/plugins/datatable/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/master.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("Sinem ÇAKIR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Kategoriler", "Kategoriler", "Home")</li>
                    <li>@Html.ActionLink("Ürünler", "Urunler", "Home")</li>
                    <li>@Html.ActionLink("Hakkımızda", "Index", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <div class="modal fade" id="mdl" role="dialog">
        <div id="dvMdlDialog" class="modal-dialog">
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script src="~/Assets/plugins/moment.min.js"></script>
    <script src="~/Assets/plugins/autocomplate/jquery-ui.min.js"></script>
    <script src="~/Assets/plugins/datatable/jquery.dataTables.min.js"></script>
    <script src="~/Assets/plugins/datatable/jquery.dataTables.bootstrap.min.js"></script>
    <script src="~/Assets/plugins/datatable/dataTables.buttons.min.js"></script>
    <script src="~/Assets/plugins/datatable/pdfmake.min.js"></script>
    <script src="~/Assets/plugins/datatable/vfs_fonts.js"></script>
    <script src="~/Assets/plugins/datatable/dataTables.select.min.js"></script>


    <script src="~/Assets/plugins/table.js"></script>
    <script src="~/Assets/plugins/post_.js"></script>
    <script src="~/Assets/plugins/form-validation.js"></script>
    <script src="~/Assets/plugins/table_properties.js"></script>
    <script src="~/Assets/plugins/process.js"></script>



</body>
</html>

